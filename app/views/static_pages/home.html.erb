<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <!-- section>
        <%= render 'shared/stats' %>
      </section -->
      <section>
        <%= render 'shared/input_form' %>
      </section>
    </aside>
    <div class="span8">
      <% if @course_count == 0 %>
        <h3>Babson College Course List</h3>
        <p>List Is Empty.</p>
      <% else %>
        <h3>Babson College <span class="timestamp"> - <%= @course_count %> courses </span></h3>
        <ol class="microposts">
          <%= render @courses %>
        </ol>
        <%= will_paginate @courses %>
      <% end %>    
    </div>
    <!-- div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div -->
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to CourseVerse</h1>

    <h2>
      We are Yelp for college courses.
    </h2>
    <h2>
      This is <a href="http://babson.edu/">Babson College</a> page.
    </h2>
    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <!--%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %-->
<% end %>